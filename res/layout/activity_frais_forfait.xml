<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/lightblue" 
    tools:context=".FraisForfaitActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Frais au Forfait"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#8a2be2" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1" >

        <RadioGroup
            android:id="@+id/rg1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="9dp" >

            <RadioButton
                android:id="@+id/rbKm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="initialiserKM"
                android:text="Km" />

            <RadioButton
                android:id="@+id/rbRepas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="initialiserQuantite"
                android:text="Repas" />

            <RadioButton
                android:id="@+id/rbNuite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="initialiserQuantite"
                android:text="NuitÃ©e" />

            <RadioButton
                android:id="@+id/rbEtape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="initialiserQuantite"
                android:text="Etape" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1" >

          <ImageButton
              android:id="@+id/btAjout"
              android:layout_width="60dp"
              android:layout_height="30dp"
              android:background="#f0f8ff"
              android:onClick="insertionFraisForfait"
              android:src="@drawable/check" />

          <ImageButton
              android:id="@+id/imageButton1"
              android:layout_width="60dp"
              android:layout_height="30dp"
              android:background="#f0f8ff"
              android:src="@drawable/edit" />

          <ImageButton
              android:id="@+id/imageButton2"
              android:layout_width="60dp"
              android:layout_height="30dp"
              android:background="#f0f8ff"
              android:src="@drawable/delete"
               android:onClick="supprimerFF"  />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="#0000CC"
             android:dividerHeight="0.1dp"
             android:scrollbarStyle="outsideInset"  >
          
         
    </LinearLayout>

    <LinearLayout
          android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout2" 
        android:orientation="vertical" >
    
         <ListView
             android:id="@+id/listView1"
             android:layout_width="match_parent"
             android:layout_height="246dp"
             android:divider="#0000CC"
             android:dividerHeight="0.1dp"
             android:scrollbarStyle="outsideInset" >

    </ListView>
    </LinearLayout>

    <EditText
        android:id="@+id/etDate"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/etQuantite"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="date" />

    <EditText
        android:id="@+id/etQuantite"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/spinner1"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="number" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:entries="@array/spinner_item"
        android:textSize="9dp" />

</RelativeLayout>